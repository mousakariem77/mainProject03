@model WebLibrary.Models.Course;

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/fonts/boxicons.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid mt-2 mb-3 p-0">
    <div class="card mb-4 bg-theme">
        <div class="ml-5 mt-3 mb-3">
            <div class="container-fluid">
                <div class="d-flex align-items-start align-items-sm-center mb-4">
                    <div class="mt-5 mr-4">
                        <img class="avatar-initial rounded-circle bg-label-warning" src="~/img/1.png" style="width: 100%;">
                    </div>
                    <div class="form-group ml-3 mt-5">
                        <label asp-for="CourseId" class="text-theme font-weight-bold"></label>
                        <input asp-for="CourseId" class="form-control" style="width: 50%;" disabled/>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="text-theme font-weight-bold"></label>
                            <input asp-for="CategoryId" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="CourseName" class="text-theme font-weight-bold"></label>
                            <input asp-for="CourseName" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Description" class="text-theme font-weight-bold"></label>
                            <input asp-for="Description" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Picture" class="text-theme font-weight-bold"></label>
                            <input asp-for="Picture" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="TotalTime" class="text-theme font-weight-bold"></label>
                            <input asp-for="TotalTime" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Price" class="text-theme font-weight-bold"></label>
                            <input asp-for="Price" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                    
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Status" class="text-theme font-weight-bold"></label>
                            <input asp-for="Status" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>

<!-- The Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content bg-theme">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title text-theme">Delete</h4>
        <button type="button" class="btn-close bg-theme text-theme border-0" data-bs-dismiss="modal">x</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body text-theme">
        Do you really want to delete this course?
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <form asp-action="DeleteCourse" method="post">
            <button type="submit" class="btn btn-success mr-3">Yes</button>
        </form>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
      </div>

    </div>
  </div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}