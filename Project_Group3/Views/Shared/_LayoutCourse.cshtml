<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/js/site.js" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

@{
    // Lấy giá trị từ Request.Cookies
    var cookieValue = Context.Request.Cookies["ID"];
    var role = Context.Request.Cookies["Role"];
    int id = Convert.ToInt32(cookieValue);
}

<body onload="time()">
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 text-white bg-theme p-0 mt-2" style="min-height: 750px;">
                <a asp-controller="Home" asp-action="Index" class="app-brand text-decoration-none d-block mt-3 mb-3 ml-4">
                    <h6 class="m-0 fw-bold mt-1"><i class='bx bxs-chevron-left-circle' style="margin: -2px 5px 0 0;"></i>Exit</h6>
                </a>
                <ul class="navbar-nav flex-grow-1 ml-2 mt-5">
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Course" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            Dashboards</a>
                    </li>
                    <li class="nav-item pl-3 active">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Course" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-user-voice"></i>
                            Course management</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Course" asp-action="Learner">
                            <i class="menu-icon tf-icons bx bx-group"></i>
                            Quizz management</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Course" asp-action="Setting">
                            <i class="menu-icon tf-icons bx bx-cog"></i>
                            Setting</a>
                    </li>
                </ul>
                <div class="birdEdu-image card-body rounded-bottom">
                    <img class="img-fluid" src="~/img/avatars/birdEdu.png" alt="">
                </div>
            </div>
            <div class="col-10 p-0 layout-theme text-white"> 
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 p-0" style="min-height: 90px;">
                            <nav class="navbar navbar-expand-sm navbar-dark bg-theme pt-2 pb-3">
                                <div class="container-fluid bg-theme mt-3 ml-5">
                                    <h5 class="m-0 fw-bold text-theme"><small class="text-primary">Hello, </small>my Instructor</h5>
                                    
                                    <ul class="navbar-nav flex-row align-items-center ms-auto float-right">
                                        <li class="nav-item mr-5">
                                            <div id="clock" class="text-theme"></div>
                                        </li>
                                        <li class="nav-item mr-4 mt-1">
                                            <a class="notifi-icon">
                                                <i class="tf-icons bx bx-bell text-theme" style="font-size: 2rem;"></i>
                                                <div class="badge-intructor text-white bg-danger rounded-pill">5</div>
                                            </a>
                                        </li>
                                        <li class="user nav-item cursor-pointer mr-5">
                                            <div class="dropdown">
                                                <a class="avatar-instructor btn dropdown-toggle border-0 p-0"
                                                    style="border-top: 0; width: 50px;" data-bs-toggle="dropdown">
                                                    <img src="~/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle"
                                                        style="width: 90%;" />
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-end mt-2 mr-5"
                                                    style="min-width: 10rem; z-index: 9999;position: absolute; left: -7rem;">
                                                    <li class="d-flex">
                                                        <div class="flex-shrink-0 ml-2 mr-3">
                                                            <div class="avatar avatar-online">
                                                                <img src="~/img/avatars/1.png" alt
                                                                    class="w-px-40 h-auto rounded-circle" />
                                                            </div>
                                                        </div>
                                                        <div class="flex-grow-1 text-theme">
                                                            <span class="fw-medium d-block">@Context.Request.Cookies["Name"]</span>
                                                            <small class="text-muted">Instructor</small>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <a class="p-2 dropdown-item text-theme mt-2" asp-controller="Home"
                                                            asp-action="Profile" asp-route-id="@id">
                                                            <i class="bx bx-user me-2"></i>
                                                            <span class="align-middle">My Profile</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="p-2 dropdown-item text-theme mt-2" asp-controller="Course"
                                                            asp-action="Index" asp-route-id="@id">
                                                            <i class='bx bx-bookmarks' ></i>
                                                            <span class="align-middle">My Course</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="p-2 dropdown-item text-theme" href="#">
                                                            <i class='bx bx-cog' ></i>
                                                            <span class="align-middle">Setting</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="p-2 dropdown-item text-theme" asp-controller="User"
                                                            asp-action="Logout">
                                                            <i class="bx bx-log-out"></i>
                                                            <span class="align-middle">Sign out</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                        <div class="col-lg-12 text-white p-0 mb-4">
                            <div class="container-fluid">
                                <main role="main" class="pb-3">
                                    @RenderBody()
                                </main>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
