@model Project_Group3.Controllers.UserController
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<link rel="stylesheet" href="~/css/checkemail.css">
<link rel="stylesheet" href="~/css/site.css" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">

<div class="bg-login d-flex justify-content-center align-items-center vh-100">
    <div class="row">
        <div class="col-md-12 mt-2 mb-3">
            <div class="card mt-5">
                <div class="card-body" style="width: 40rem;">
                    <!-- Logo -->
                    <div class="text-center mb-4 pt-4">
                        <h4 class="mb-2">Reset Password ðŸ”’</h4>
                    </div>
                    <p class="text-center mb-4">Please enter your new password</p>
                    <form asp-action="ResetPassword">
                        <div class="mb-3">
                            <label for="password" class="form-label">New Password</label>
                            <input name="password" class="form-control" type="password"
                                placeholder="Enter your new password" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input name="confirmPassword" class="form-control" type="password"
                                placeholder="Confirm your new password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                    </form>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Login", "User")" class="text-decoration-none">
                            <i class="bx bx-chevron-left bx-sm align-middle"></i>
                            Back to login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>