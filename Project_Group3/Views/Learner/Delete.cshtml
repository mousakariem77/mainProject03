@model WebLibrary.Models.Learner;

@{
    ViewData["Title"] = "Delete Learner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/fonts/boxicons.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid mt-2 mb-3 p-0">
    <div class="card mb-4 bg-theme">
        <div class="card-body d-flex" style="justify-content: space-between;">
                <div class="d-flex align-items-start align-items-sm-center gap-4 ml-5">
                    <div class=" mr-2 mt-5">
                        <img class="avatar-initial rounded-circle bg-label-warning" src="~/img/1.png" style="width: 80%;">
                    </div>
                    <div class="id-text form-group">
                        <label class="text-theme font-weight-bold">LearnerId</label>
                        @* <input value="@Model.LearnerId" class="form-control" style="width: 80%;" readonly/> *@
                    </div>
                </div>
            </div>
            <div class="container-fluid ml-5">
                <div class="row">
                    <input type="hidden" asp-for="LearnerId" />
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">FirstName</label>
                            <input asp-for="FirstName" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">LastName</label>
                            <input asp-for="LastName" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">Gender</label>
                            <input asp-for="Gender" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">Country</label>
                            <input asp-for="Country" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">Email</label>
                            <input asp-for="Email" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">PhoneNumber</label>
                            <input asp-for="PhoneNumber" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">Birthday</label>
                            <input asp-for="Birthday" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">Registration Date</label>
                            <input asp-for="RegistrationDate" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label class="text-theme font-weight-bold">Status</label>
                             <input asp-for="Status" class="form-control" style="width: 80%;" readonly/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex mb-4">
                <button type="button" class="btn btn-danger ml-5 mr-4" data-bs-toggle="modal" data-bs-target="#myModal" style="width: 10%;">Delete</button>
                <a href="@Url.Action("Learner", "Admin")" class="btn btn-secondary" style="width: 10%;">Cancel</a>
            </div>
        </div>
    </div>
</div>

<h1 class="text-danger">@ViewBag.Message</h1>
<!-- The Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content bg-theme">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title text-theme">Delete</h4>
        <button type="button" class="btn-close bg-theme text-theme border-0" data-bs-dismiss="modal">x</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body text-theme">
        Do you really want to delete this user account?
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <form asp-action="Delete" method="post">
            <button type="submit" class="btn btn-success mr-3">Yes</button>
        </form>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
      </div>

    </div>
  </div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}